                <div class="formFields forexAccount" id="forexForm">
                    <h2>Fill Out The Application Below</h2>
                    <h5>All Fields are Required</h5>
                    <hr />
                    <fieldset>
                        <label class="required">Full Name</label>
                        <input type="text" name="name" required />
                    </fieldset>
                    <fieldset>
                        <label class="required">Email Address</label>
                        <input type="email" name="email" required />
                    </fieldset>
                    <fieldset>
                        <label class="required">Phone Number</label>
                        <input type="text" name="phone" required />
                    </fieldset>
                    <fieldset>
                        <label>Account Type</label>
                        <select id="acctType" required>
                            <option value="individual">Individual</option>
                            <option value="corporation">Corporation</option>
                        </select>
                    </fieldset>
                    <fieldset>
                        <label>Country</label>
                        <select id="country" required>
                            <option value="usa">USA</option>
                            <option value="non-usa">Outside USA</option>
                        </select>
                    </fieldset>
                    <hr />
                    <button class="btn btn-primary submitApp" id="submitAppForex" disabled>Continue</button>
                </div>


                <div class="formFields futuresAccount">
                    <h2>Fill Out the Account Application Below</h2>
                    <h5>All Fields are Required</h5>
                    <fieldset>
                        <label class="required">Full Name</label>
                        <input type="text" name="name" required />
                    </fieldset>

                    <fieldset>
                        <label class="required">Email Address</label>
                        <input type="email" name="email" required />
                    </fieldset>

                    <fieldset>
                        <label class="required">Confirm Address</label>
                        <input type="email" name="cnfirmADdress" required />
                    </fieldset>

                    <fieldset>
                        <label class="required">Phone Number</label>
                        <input type="text" name="phone" required />
                    </fieldset>

                    <button class="btn btn-primary submitApp" id="submitAppFutures" disabled>Continue</button>

                </div>


            </div>
        </div>
    </div>
</div>

