
@{
    ViewBag.Title = "New-Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Start Subpage Hero -->
<div class="subpage-hero">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>New Account</h1>
                <h5>Start investing today</h5>
            </div>
        </div>
    </div>
</div>
<!-- End Subpage Hero -->
<div class="page-content">
    <div class="container">
        <div class="row">
            @Html.Partial("_SupportNavigation")
            <div class="col-md-6 col-12">
                @Html.Partial("_BreadCrumbs")

                <!-- Start Account  Selection -->
